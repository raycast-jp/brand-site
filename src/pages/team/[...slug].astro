---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const team = await getCollection('team');
  return team.map(member => ({
    params: { slug: member.id },
    props: { member },
  }));
}

const { member } = Astro.props;
const { Content } = await render(member);

// expertise のラベルマップ
const expertiseLabels: Record<string, string> = {
  'event-planning': 'イベント企画',
  'content-creation': 'コンテンツ制作',
  'community-management': 'コミュニティ運営',
  'extension-development': '拡張機能開発',
  'translation': '翻訳',
  'design': 'デザイン',
};

// contribution type のラベルマップ
const contributionTypeLabels: Record<string, string> = {
  'event': 'イベント',
  'content': 'コンテンツ',
  'extension': '拡張機能',
  'other': 'その他',
};
---

<MainLayout
  title={member.data.name}
  description={`${member.data.name} - ${member.data.role} | Raycast Community Japan`}
>
  <article class="member-detail">
    <!-- Header -->
    <header class="member-header">
      <div class="container">
        <a href="/team" class="back-link">&larr; チーム一覧へ戻る</a>

        <div class="member-info">
          <div class="member-avatar">
            {member.data.avatar ? (
              <img src={member.data.avatar} alt={member.data.name} />
            ) : (
              <div class="avatar-placeholder">
                {member.data.name.charAt(0)}
              </div>
            )}
          </div>

          <div class="member-details">
            <h1 class="member-name">{member.data.name}</h1>
            <p class="member-role">{member.data.role}</p>

            {member.data.expertise && member.data.expertise.length > 0 && (
              <div class="member-tags">
                {member.data.expertise.map(tag => (
                  <span class="expertise-tag">{expertiseLabels[tag] || tag}</span>
                ))}
              </div>
            )}

            <p class="member-bio">{member.data.bio}</p>

            {member.data.social && (
              <div class="member-social">
                {member.data.social.x && (
                  <a href={member.data.social.x} target="_blank" rel="noopener noreferrer" class="social-link">
                    X (Twitter)
                  </a>
                )}
                {member.data.social.github && (
                  <a href={member.data.social.github} target="_blank" rel="noopener noreferrer" class="social-link">
                    GitHub
                  </a>
                )}
                {member.data.social.website && (
                  <a href={member.data.social.website} target="_blank" rel="noopener noreferrer" class="social-link">
                    Website
                  </a>
                )}
              </div>
            )}
          </div>
        </div>
      </div>
    </header>

    <!-- Raycast Story -->
    {member.data.raycastJourney && (
      <section class="raycast-story">
        <div class="container">
          <div class="story-card">
            <h2 class="story-title">Raycastとの出会い</h2>
            <div class="story-content">
              {member.data.raycastJourney.startYear && (
                <div class="story-item">
                  <span class="story-label">使い始め</span>
                  <span class="story-value">{member.data.raycastJourney.startYear}〜</span>
                </div>
              )}
              {member.data.raycastJourney.trigger && (
                <div class="story-item">
                  <span class="story-label">きっかけ</span>
                  <span class="story-value">{member.data.raycastJourney.trigger}</span>
                </div>
              )}
              {member.data.raycastJourney.favoriteExtensions && member.data.raycastJourney.favoriteExtensions.length > 0 && (
                <div class="story-item">
                  <span class="story-label">お気に入り</span>
                  <span class="story-value">{member.data.raycastJourney.favoriteExtensions.join(', ')}</span>
                </div>
              )}
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Content -->
    <section class="member-content">
      <div class="container">
        <div class="content-body">
          <Content />
        </div>
      </div>
    </section>

    <!-- Achievements -->
    {member.data.achievements && member.data.achievements.length > 0 && (
      <section class="member-achievements">
        <div class="container">
          <h2>主な実績</h2>
          <div class="achievements-grid">
            {member.data.achievements.map(achievement => (
              <div class="achievement-card">
                <h3 class="achievement-title">
                  {achievement.url ? (
                    <a href={achievement.url} target="_blank" rel="noopener noreferrer">
                      {achievement.title}
                    </a>
                  ) : (
                    achievement.title
                  )}
                </h3>
                {achievement.date && (
                  <time class="achievement-date">{achievement.date}</time>
                )}
                {achievement.description && (
                  <p class="achievement-description">{achievement.description}</p>
                )}
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Contributions -->
    {member.data.contributions && member.data.contributions.length > 0 && (
      <section class="member-contributions">
        <div class="container">
          <h2>活動履歴</h2>
          <div class="contributions-timeline">
            {member.data.contributions.map(contribution => (
              <div class="contribution-item">
                <time class="contribution-date">{contribution.date}</time>
                {contribution.type && (
                  <span class="contribution-type">{contributionTypeLabels[contribution.type] || contribution.type}</span>
                )}
                <span class="contribution-description">
                  {contribution.url ? (
                    <a href={contribution.url} target="_blank" rel="noopener noreferrer">
                      {contribution.description}
                    </a>
                  ) : (
                    contribution.description
                  )}
                </span>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}
  </article>
</MainLayout>

<style>
  .member-detail {
    padding-bottom: var(--spacing-4xl);
  }

  /* Header */
  .member-header {
    padding: var(--spacing-2xl) 0 var(--spacing-3xl);
  }

  .back-link {
    display: inline-block;
    font-size: 0.875rem;
    color: var(--color-gray-500);
    margin-bottom: var(--spacing-xl);
  }

  .back-link:hover {
    color: var(--color-black);
    opacity: 1;
  }

  .member-info {
    display: flex;
    gap: var(--spacing-2xl);
    align-items: flex-start;
  }

  .member-avatar {
    flex-shrink: 0;
    width: 160px;
    height: 160px;
    border-radius: 50%;
    overflow: hidden;
  }

  .member-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .avatar-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-gray-200);
    color: var(--color-gray-600);
    font-size: 4rem;
    font-weight: 700;
  }

  .member-details {
    flex: 1;
  }

  .member-name {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-xs);
  }

  .member-role {
    font-size: 1.125rem;
    color: var(--color-gray-500);
    margin-bottom: var(--spacing-md);
  }

  /* Expertise Tags in header */
  .member-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
    margin-bottom: var(--spacing-md);
  }

  .expertise-tag {
    display: inline-block;
    padding: 4px 12px;
    font-size: 0.8125rem;
    color: var(--color-gray-600);
    background-color: var(--color-gray-100);
    border-radius: 16px;
  }

  .member-bio {
    font-size: 1rem;
    color: var(--color-gray-600);
    line-height: 1.6;
    margin-bottom: var(--spacing-lg);
  }

  .member-social {
    display: flex;
    gap: var(--spacing-md);
  }

  .social-link {
    font-size: 0.9375rem;
    color: var(--color-gray-600);
    padding: var(--spacing-xs) 0;
  }

  .social-link:hover {
    color: var(--color-black);
    opacity: 1;
  }

  /* Raycast Story */
  .raycast-story {
    padding: var(--spacing-2xl) 0;
  }

  .story-card {
    max-width: 700px;
    padding: var(--spacing-xl);
    background-color: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: 12px;
  }

  .story-title {
    font-size: 1.125rem;
    margin-bottom: var(--spacing-lg);
  }

  .story-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .story-item {
    display: flex;
    gap: var(--spacing-md);
  }

  .story-label {
    flex-shrink: 0;
    width: 80px;
    font-size: 0.875rem;
    color: var(--color-gray-500);
  }

  .story-value {
    font-size: 0.9375rem;
    color: var(--color-gray-700);
  }

  /* Content */
  .member-content {
    padding: var(--spacing-3xl) 0;
  }

  .content-body {
    max-width: 700px;
  }

  .content-body :global(h2) {
    font-size: 1.5rem;
    margin-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-md);
  }

  .content-body :global(p) {
    line-height: 1.8;
    color: var(--color-gray-700);
  }

  /* Achievements */
  .member-achievements {
    padding: var(--spacing-2xl) 0;
  }

  .member-achievements h2 {
    margin-bottom: var(--spacing-xl);
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-lg);
    max-width: 700px;
  }

  .achievement-card {
    padding: var(--spacing-lg);
    background-color: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: 8px;
  }

  .achievement-title {
    font-size: 1rem;
    margin-bottom: var(--spacing-xs);
  }

  .achievement-title a {
    color: inherit;
  }

  .achievement-title a:hover {
    color: var(--color-black);
    opacity: 1;
  }

  .achievement-date {
    display: block;
    font-size: 0.8125rem;
    color: var(--color-gray-500);
    margin-bottom: var(--spacing-sm);
  }

  .achievement-description {
    font-size: 0.875rem;
    color: var(--color-gray-600);
    line-height: 1.5;
    margin: 0;
  }

  /* Contributions */
  .member-contributions {
    padding: var(--spacing-2xl) 0;
  }

  .member-contributions h2 {
    margin-bottom: var(--spacing-xl);
  }

  .contributions-timeline {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    max-width: 700px;
  }

  .contribution-item {
    display: flex;
    gap: var(--spacing-md);
    padding: var(--spacing-md) 0;
    border-bottom: 1px solid var(--color-gray-200);
    align-items: baseline;
  }

  .contribution-item:last-child {
    border-bottom: none;
  }

  .contribution-date {
    flex-shrink: 0;
    width: 70px;
    font-size: 0.875rem;
    color: var(--color-gray-500);
  }

  .contribution-type {
    flex-shrink: 0;
    padding: 2px 8px;
    font-size: 0.75rem;
    color: var(--color-gray-600);
    background-color: var(--color-gray-100);
    border-radius: 4px;
  }

  .contribution-description {
    color: var(--color-gray-700);
    flex: 1;
  }

  .contribution-description a {
    color: inherit;
  }

  .contribution-description a:hover {
    color: var(--color-black);
    opacity: 1;
  }

  @media (max-width: 768px) {
    .member-info {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .member-avatar {
      width: 120px;
      height: 120px;
    }

    .avatar-placeholder {
      font-size: 3rem;
    }

    .member-name {
      font-size: 1.75rem;
    }

    .member-tags {
      justify-content: center;
    }

    .member-social {
      justify-content: center;
    }

    .achievements-grid {
      grid-template-columns: 1fr;
    }

    .contribution-item {
      flex-wrap: wrap;
    }

    .contribution-date {
      width: auto;
    }
  }
</style>
